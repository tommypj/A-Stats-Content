# A-Stats Engine - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME="A-Stats Engine"
APP_VERSION="2.0.0"
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/astats
DATABASE_ECHO=false

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Authentication
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-generate-a-secure-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# Anthropic (AI Content Generation)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# Replicate (Image Generation)
# =============================================================================
REPLICATE_API_TOKEN=r8_...
REPLICATE_MODEL=black-forest-labs/flux-1.1-pro

# =============================================================================
# Resend (Email)
# =============================================================================
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@astats.app

# =============================================================================
# Stripe (Payments)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...
STRIPE_PRICE_ELITE_MONTHLY=price_...
STRIPE_PRICE_ELITE_YEARLY=price_...

# =============================================================================
# Google (OAuth & Search Console)
# =============================================================================
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-...
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/gsc/callback

# =============================================================================
# ChromaDB (Vector Store)
# =============================================================================
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=knowledge_vault

# =============================================================================
# Storage
# =============================================================================
STORAGE_TYPE=local  # local, s3
STORAGE_LOCAL_PATH=./data/uploads

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# =============================================================================
# Frontend URL (for email links)
# =============================================================================
FRONTEND_URL=http://localhost:3000
