# A-Stats Engine - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME="A-Stats Engine"
APP_VERSION="2.0.0"
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/astats
DATABASE_ECHO=false

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security (CHANGE THESE IN PRODUCTION!)
# =============================================================================
# CRITICAL: Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# MUST be at least 32 characters for production
SECRET_KEY=change-me-generate-a-secure-secret-key-here-min-32-chars
JWT_SECRET_KEY=change-me-generate-a-secure-jwt-secret-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# Anthropic (AI Content Generation)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# =============================================================================
# OpenAI (Embeddings for Knowledge Vault)
# =============================================================================
OPENAI_API_KEY=sk-...
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Replicate (Image Generation)
# =============================================================================
REPLICATE_API_TOKEN=r8_...
REPLICATE_MODEL=black-forest-labs/flux-1.1-pro

# =============================================================================
# Resend (Email)
# =============================================================================
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@astats.app

# =============================================================================
# LemonSqueezy (Payments)
# =============================================================================
LEMONSQUEEZY_API_KEY=...
LEMONSQUEEZY_STORE_ID=...
LEMONSQUEEZY_WEBHOOK_SECRET=...
LEMONSQUEEZY_VARIANT_STARTER_MONTHLY=...
LEMONSQUEEZY_VARIANT_STARTER_YEARLY=...
LEMONSQUEEZY_VARIANT_PROFESSIONAL_MONTHLY=...
LEMONSQUEEZY_VARIANT_PROFESSIONAL_YEARLY=...
LEMONSQUEEZY_VARIANT_ENTERPRISE_MONTHLY=...
LEMONSQUEEZY_VARIANT_ENTERPRISE_YEARLY=...

# =============================================================================
# Google (OAuth & Search Console)
# =============================================================================
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-...
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/gsc/callback

# =============================================================================
# Social Media Platforms (OAuth & API)
# =============================================================================

# Twitter/X OAuth 2.0 with PKCE
TWITTER_CLIENT_ID=...
TWITTER_CLIENT_SECRET=...
TWITTER_REDIRECT_URI=http://localhost:8000/api/v1/social/twitter/callback

# LinkedIn OAuth 2.0
LINKEDIN_CLIENT_ID=...
LINKEDIN_CLIENT_SECRET=...
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/v1/social/linkedin/callback

# Facebook/Instagram OAuth 2.0
FACEBOOK_APP_ID=...
FACEBOOK_APP_SECRET=...
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/v1/social/facebook/callback

# =============================================================================
# ChromaDB (Vector Store)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_PREFIX=knowledge_vault

# =============================================================================
# Storage
# =============================================================================
STORAGE_TYPE=local  # local, s3
STORAGE_LOCAL_PATH=./data/uploads

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# =============================================================================
# Frontend URL (for email links)
# =============================================================================
FRONTEND_URL=http://localhost:3000
